<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ibMessage"
                android:layout_toStartOf="@+id/ibMessage"
                android:text="Pablo Ogata"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:id="@+id/textName"
                />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textName"
                android:layout_toLeftOf="@+id/ibMessage"
                android:layout_toStartOf="@+id/ibMessage"
                android:text="0354743333"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:id="@+id/text_Numbers"
                />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/ibMessage"
                android:src="@drawable/call"
                android:id="@+id/ibcall"
                />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ibcall"
                android:layout_toStartOf="@+id/ibcall"
                android:background="@drawable/message"
                android:id="@+id/ibMessage"

                />


        </RelativeLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>